{
  "rewrites": [
    {
      "source": "/",
      "destination": "/en"
    }
  ],
  "redirects": [
    {
      "source": "/:path((?!en|tr|ar|ku|_next|api|favicon.ico|.*\\..*).*)",
      "destination": "/en/:path*",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}